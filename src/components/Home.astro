---
import GitHub from "./logos/GitHub.astro";
import LinkedIn from "./logos/LinkedIn.astro";
import Twitter from "./logos/Twitter.astro";
---

<section
  id="home"
  class="h-[100vh] flex flex-col 2xl:flex-row items-center justify-center"
>
  <img
    class="w-40 h-40 mb-5 rounded-full 2xl:w-52 2xl:h-52 2xl:mb-0 2xl:mr-10"
    src="avatar2.webp"
    alt="Avatar"
  />
  <article class="text-center 2xl:text-left">
    <h1
      class="px-8 mb-4 text-4xl font-extrabold tracking-tight text-white sm:text-5xl 2xl:px-0"
    >
      Hi, I'm <span class="gradient">Tristan</span>
    </h1>
    <div
      class="max-w-xl px-8 pb-1 mb-1 text-lg font-semibold tracking-tight text-gray sm:text-xl 2xl:px-0 2xl:max-w-md"
    >
      <p>
        Critical thinking, decision making and problem solving skills. I am a
        front-end developer committed to delivering high-quality, reliable
        products and take a thorough view of the business and functionalities of
        the projects I work on.
      </p>
      <p class="mt-3 font-semibold tracking-tight text-white">
        Contact me at <a href="mailto:tres@duck.com" class="text-blue hover:text-[#00DFD8] transition duration-300"
          >tres@duck.com</a>
      </p>
    </div>
    <div
      class="flex items-center justify-center gap-6 text-gray 2xl:align-baseline 2xl:justify-start"
    >
      <a
        title="Twitter"
        href="https://twitter.com/treslog"
        target="_blank"
        rel="noopener noreferrer"
      >
        <Twitter />
      </a>
      <a
        title="GitHub"
        href="https://github.com/treslog"
        target="_blank"
        rel="noopener noreferrer"
      >
        <GitHub />
      </a>
      <a
        title="LinkedIn"
        href="https://linkedin.com/in/tri"
        target="_blank"
        rel="noopener noreferrer"
      >
        <LinkedIn />
      </a>
      <a
        title="View resume"
        href="https://resume.treslog.com"
        target="_blank"
        rel="noopener noreferrer"
      >
        <div
          class="text-white hover:text-[#000] font-semibold px-4 py-1.5 border border-blue p-1 rounded shadow-xl hover:shadow-[#007dfb42] hover:saturate-150 transition duration-700 hover:bg-blue flex items-center justify-center tracking-tight"
        >
          <svg
            stroke="currentColor"
            fill="currentColor"
            stroke-width="0"
            viewBox="0 0 512 512"
            class="w-4 h-4 mr-2"
            height="1em"
            width="1em"
            xmlns="http://www.w3.org/2000/svg"
            ><path
              d="M432,320H400a16,16,0,0,0-16,16V448H64V128H208a16,16,0,0,0,16-16V80a16,16,0,0,0-16-16H48A48,48,0,0,0,0,112V464a48,48,0,0,0,48,48H400a48,48,0,0,0,48-48V336A16,16,0,0,0,432,320ZM488,0h-128c-21.37,0-32.05,25.91-17,41l35.73,35.73L135,320.37a24,24,0,0,0,0,34L157.67,377a24,24,0,0,0,34,0L435.28,133.32,471,169c15,15,41,4.5,41-17V24A24,24,0,0,0,488,0Z"
            ></path>
          </svg>
          View resume
        </div>
      </a>
    </div>
  </article>
</section>

<style>
  :global(svg:hover) {
    transition: 0.3s;
  }

  section {
    background: radial-gradient(
      ellipse 50% 50% at 80% 50%,
      rgba(29, 46, 204, 0.148),
      rgba(255, 255, 255, 0)
    );
  }

  h1 {
    animation: 1000ms ease 0s 1 normal backwards running tres;
  }

  p {
    animation: 1000ms ease 400ms 1 normal backwards running tres;
  }

  a {
    animation: 1000ms ease 400ms 1 normal backwards running tres;
  }

  @keyframes tres {
    0% {
      opacity: 0;
      transform: translateY(-10px);
    }
    100% {
      opacity: 1;
      transform: none;
    }
  }

  .text-gradient {
    font-weight: 900;
    background-image: var(--astro-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 100% 200%;
    background-position-y: 100%;
    border-radius: 0.4rem;
    animation: pulse 4s ease-in-out infinite;
  }

  .gradient {
    animation: flow 5s ease-in-out infinite;
    background: linear-gradient(90deg, #007CFB, #00DFD8);
    background-size: 300%;
    -webkit-background-clip: text;
    background-clip: text;
    -webkit-text-fill-color: transparent;
  }
  @keyframes flow {
    0% {
      background-position: 0% 50%;
    }
    50% {
      background-position: 100% 50%;
    }
    100% {
      background-position: 0% 50%;
    }
  }
</style>
